{
  "name": "notification",
  "version": "0.1.0",
  "description": "Socketkit Notification service",
  "main": "src/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon -r dotenv/config",
    "test": "node --experimental-vm-modules --no-warnings -r dotenv/config node_modules/.bin/jest --detectOpenHandles",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.js\" --fix"
  },
  "author": "Yagiz Nizipli <yagiz@nizipli.com>",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.2",
    "@grpc/proto-loader": "^0.6.2",
    "@sentry/node": "^6.4.0",
    "@sentry/tracing": "^6.4.0",
    "consola": "^2.15.3",
    "dayjs": "^1.10.4",
    "knex": "^0.95.6",
    "mali": "^0.41.2",
    "pg": "^8.6.0",
    "stripe": "^8.148.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "security"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 2020
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  }
}
