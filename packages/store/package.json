{
  "name": "store",
  "version": "0.1.0",
  "description": "Socketkit Store",
  "main": "src/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "DOTENV_CONFIG_PATH=.env.development nodemon -r dotenv/config",
    "test": "DOTENV_CONFIG_PATH=.env.development node --experimental-vm-modules -r dotenv/config node_modules/.bin/jest --detectOpenHandles",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.js\" --fix"
  },
  "author": "Yagiz Nizipli <yagiz@nizipli.com>",
  "dependencies": {
    "@grpc/grpc-js": "^1.2.10",
    "@grpc/proto-loader": "^0.5.6",
    "@sentry/node": "^6.2.2",
    "@sentry/tracing": "^6.2.2",
    "appstore-sensor": "^0.3.0",
    "consola": "^2.15.3",
    "dayjs": "^1.10.4",
    "knex": "^0.95.2",
    "mali": "^0.40.0",
    "pg": "^8.5.1",
    "tunnel": "^0.0.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "dotenv": "^8.2.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "security"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 2020
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  }
}
