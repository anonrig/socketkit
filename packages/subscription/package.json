{
  "name": "appstore-worker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon -r dotenv/config",
    "test": "node --experimental-vm-modules --no-warnings -r dotenv/config node_modules/.bin/jest",
    "lint": "eslint ./src/**/*.js",
    "lint:fix": "eslint --fix ./src/**/*.js"
  },
  "author": "Yagiz Nizipli <yagiz@nizipli.com>",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.5",
    "@grpc/proto-loader": "^0.6.4",
    "@sentry/node": "^6.9.0",
    "@sentry/tracing": "^6.9.0",
    "ajv": "^8.6.2",
    "appstore-reporter": "^1.0.5",
    "consola": "^2.15.3",
    "dayjs": "^1.10.6",
    "fixer-api": "^2.2.1",
    "knex": "^0.95.7",
    "lodash": "^4.17.21",
    "mali": "^0.44.2",
    "pg": "^8.6.0",
    "pg-range": "^1.1.0",
    "slug": "^5.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@types/jest": "^26.0.24",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "security"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 2020
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "tabWidth": 2
  }
}
