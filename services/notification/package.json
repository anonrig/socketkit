{
  "name": "@socketkit/notification-worker",
  "version": "0.1.0",
  "description": "Socketkit Notification Worker",
  "author": "Yagiz Nizipli <yagiz@nizipli.com>",
  "license": "MPL-2.0",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "npx nodemon -r dotenv/config",
    "test": "c8 ava",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.js\" --fix"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.4",
    "@grpc/proto-loader": "^0.6.6",
    "@sendgrid/client": "^7.6.0",
    "@sendgrid/helpers": "^7.6.0",
    "@slack/webhook": "^6.0.0",
    "ajv": "^8.7.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "consola": "^2.15.3",
    "dayjs": "^1.10.7",
    "discord-webhook-node": "^1.1.8",
    "knex": "^0.95.14",
    "lodash": "^4.17.21",
    "mali": "^0.46.0",
    "mali-ajv": "^0.4.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^2.4.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "security"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 2021
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "cache": true,
    "failFast": true,
    "failWithoutAssertions": true,
    "environmentVariables": {
      "CI": "true"
    },
    "require": [
      "dotenv/config"
    ],
    "nodeArguments": [
      "--no-warnings",
      "--experimental-json-modules"
    ],
    "verbose": false,
    "workerThreads": true
  }
}
