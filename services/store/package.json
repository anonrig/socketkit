{
  "name": "@subscription/store-worker",
  "version": "0.1.0",
  "description": "Socketkit Store Worker",
  "author": "Yagiz Nizipli <yagiz@nizipli.com>",
  "license": "MPL-2.0",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "npx nodemon -r dotenv/config",
    "test": "c8 ava",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.js\" --fix"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.4",
    "@grpc/proto-loader": "^0.6.6",
    "@supercharge/promise-pool": "^1.9.0",
    "appstore-sensor": "^0.5.4",
    "consola": "^2.15.3",
    "dayjs": "^1.10.7",
    "knex": "^0.95.14",
    "lodash": "^4.17.21",
    "mali": "^0.46.0",
    "pg": "^8.7.1",
    "tunnel": "^0.0.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^2.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:import/recommended",
      "plugin:security/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "warnOnUnassignedImports": true,
          "newlines-between": "always-and-inside-groups"
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "cache": true,
    "failFast": true,
    "failWithoutAssertions": true,
    "environmentVariables": {
      "CI": "true"
    },
    "require": [
      "dotenv/config"
    ],
    "nodeArguments": [
      "--no-warnings",
      "--experimental-json-modules"
    ],
    "verbose": false,
    "workerThreads": true
  }
}
