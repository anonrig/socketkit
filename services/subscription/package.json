{
  "name": "@socketkit/subscription-worker",
  "description": "Socketkit Subscription Worker",
  "version": "0.1.0",
  "author": "Yagiz Nizipli <yagiz@nizipli.com>",
  "license": "MPL-2.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "npx nodemon -r dotenv/config",
    "test": "c8 ava",
    "test:watch": "ava --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\"",
    "lint:fix": "eslint \"{src,test}/**/*.js\" --fix"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.4",
    "@grpc/proto-loader": "^0.6.7",
    "ajv": "^8.8.2",
    "appstore-reporter": "^1.0.5",
    "consola": "^2.15.3",
    "dayjs": "^1.10.7",
    "fixer-api": "^2.2.1",
    "knex": "^0.95.14",
    "lodash": "^4.17.21",
    "mali": "^0.46.0",
    "pg": "^8.7.1",
    "pg-range": "^1.1.1",
    "slug": "^5.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^2.5.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "security"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "cache": true,
    "failFast": true,
    "failWithoutAssertions": true,
    "environmentVariables": {
      "CI": "true"
    },
    "require": [
      "dotenv/config"
    ],
    "nodeArguments": [
      "--no-warnings",
      "--experimental-json-modules"
    ],
    "verbose": false,
    "workerThreads": true
  }
}
