{
  "name": "@socketkit/subscription-worker",
  "description": "Socketkit Subscription Worker",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon -r dotenv/config",
    "test": "node --experimental-vm-modules --no-warnings -r dotenv/config node_modules/.bin/jest",
    "lint": "eslint ./src/**/*.js",
    "lint:fix": "eslint --fix ./src/**/*.js"
  },
  "author": "Yagiz Nizipli <yagiz@nizipli.com>",
  "dependencies": {
    "@grpc/grpc-js": "^1.4.1",
    "@grpc/proto-loader": "^0.6.6",
    "ajv": "^8.6.3",
    "appstore-reporter": "^1.0.5",
    "consola": "^2.15.3",
    "dayjs": "^1.10.7",
    "fixer-api": "^2.2.1",
    "knex": "^0.95.11",
    "lodash": "^4.17.21",
    "mali": "^0.44.4",
    "pg": "^8.7.1",
    "pg-range": "^1.1.1",
    "slug": "^5.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "security"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 2021
    },
    "env": {
      "node": true,
      "es6": true
    }
  }
}
